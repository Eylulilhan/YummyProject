@model YummyProject.Models.Event
@{
    ViewBag.Title = "AddEvent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2 class="text-success text-center pb-2 border-bottom border-success font-weight-bold display-9"
    style="font-family: 'Arial', sans-serif;">
    --ETKİNLİK EKLE--
</h2>
<br />
<form method="post" enctype="multipart/form-data">

    @Html.Label("Ad-Soyad", new { @style = "color: green;" })
    @Html.TextBoxFor(x => x.ImageFile, new { type = "file", @class = "form-control" })
    <br />
    @Html.Label("Başlık", new { @style = "color: green;" })
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />
    @Html.Label("Açıklama", new { @style = "color: green;" })
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />
    @Html.Label("Fiyat", new { @style = "color: green;" })
    @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
    <br />  

    <div class="form-group text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg rounded-pill shadow-sm px-5 py-3">
            <i class="bi bi-save me-2"></i> KAYDET
        </button>
    </div>
</form>

