@model List<YummyProject.Models.Service>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2 class="text-success text-center pb-2 border-bottom border-success font-weight-bold display-9"
    style="font-family: 'Arial', sans-serif;">
    --SERVİSLERİMİZ--
</h2>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İkon</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>



    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.Title</th>
            <th>@item.Description</th>
            <th>@item.Icon</th>
            <td><a href="/Service/UpdateService/@item.ServiceId" class="btn btn-info">GÜNCELLE</a></td>

            <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-danger">SİL</a></td>
        </tr>
    }
</table>
<br />
<a href="/Service/AddService" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">Servislerimiz Ekle</a>



