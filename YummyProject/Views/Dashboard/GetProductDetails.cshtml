@model List<YummyProject.Models.Product>


<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        Ürünler Listesi
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table">
            <thead>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Ürün Fiyatı</th>
                    <th>Kategori</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Ürün Adı</th>
                    <th>Ürün Fiyatı</th>
                    <th>Kategori</th>
                </tr>
            </tfoot>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.ProductName</td>
                        <td>@product.Price.ToString("C")</td>
                        <td>@(product.Category != null ? product.Category.CategoryName : "Kategori Yok")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


