@model List<YummyProject.Models.Chef>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;  
}


<h2 class="text-success text-center pb-2 border-bottom border-success font-weight-bold display-9"
    style="font-family: 'Arial', sans-serif;">
    --ŞEFLERİMİZ--
</h2>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel URL</th>
        <th>Ad-Soyad</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>GÜNCELLE</th>
        <th>SİL</th>



    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.ImageUrl</th>
            <th>@item.Name</th>
            <th>@item.Title</th>
            <th>@item.Description</th>
            <td><a href="/Chef/UpdateChef/@item.ChefId" class="btn btn-info">GÜNCELLE</a></td>

            <td><a href="/Chef/DeleteChef/@item.ChefId" class="btn btn-danger">SİL</a></td>
        </tr>
    }
</table>
<br />
<a href="/Chef/AddChef" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">Şef Ekle</a>



