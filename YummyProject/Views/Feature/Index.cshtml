@model List<YummyProject.Models.Feature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<h2 class="text-success text-center pb-2 border-bottom border-success font-weight-bold display-9"
    style="font-family: 'Arial', sans-serif;">

    --Öne Çıkan Alan--
</h2>   

    <table class="table table-bordered table-hover">
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Video</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td><img src="@item.ImageUrl" style="width:50px;height:50px" /></td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.VideoUrl</td>
                <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-info">GÜNCELLE</a></td>
            </tr>

        }

    </table>
    <br />
    <a href="/Feature/AddFeature" class="btn btn-primary">Yeni Öne Çıkan Alan Ekle</a>

