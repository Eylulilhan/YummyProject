@model List<YummyProject.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2 class="text-success text-center pb-2 border-bottom border-success font-weight-bold display-9"
    style="font-family: 'Arial', sans-serif;">
    --Referans--
</h2>
<br />
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel Url</th>
        <th>Ad-Soyad</th>
        <th>Başlık</th>
        <th>İçerik</th>
        <th>Değerlendirme</th>
        <th>SİL</th>



    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.ImageUrl</th>
            <th>@item.NameSurname</th>
            <th>@item.Title</th>
            <th>@item.Comment</th>
            <th>@item.Rating</th>
            <td><a href="/Testimonial/DeleteTestimonial/@item.TestimonialId" class="btn btn-info">SİL</a></td>
        </tr>
    }
</table>
<br />
<a href="/Testimonial/AddTestimonial" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff;">Yeni Referans Ekle</a>


